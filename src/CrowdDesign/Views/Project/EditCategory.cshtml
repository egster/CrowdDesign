@{
    ViewBag.Title = "Edit category";
}

@model CrowdDesign.UI.Web.Models.EditCategoryViewModel

<div id="divEditCategoryMain">
    @{
        string actionName;

        if (Model == null || Model.CategoryId == null)
        {
            actionName = "CreateCategory";
        }
        else
        {
            actionName = "UpdateCategory";
        }

        Html.ValidationSummary(true);

        <br/>

        using (Html.BeginForm(actionName, "Project", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ProjectId)
            @Html.HiddenFor(model => model.CategoryId)

            <div class="divEditCategoryField">
                <div>
                    @Html.LabelFor(model => model.Name, new {Class = "lblField"})
                </div>

                <div>
                    @Html.TextBoxFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="divEditCategoryField">
                <div>
                    @Html.LabelFor(model => model.Description, new {Class = "lblField"})
                </div>

                <div>
                    @Html.TextAreaFor(model => model.Description, new {Id = "txtDescription"})
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="divEditCategoryField">
                <input id="btnSaveSketch" type="submit" value="Save changes"/>
            </div>
        }
    }
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
